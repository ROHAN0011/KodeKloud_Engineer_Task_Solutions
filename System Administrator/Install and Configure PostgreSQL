[login  to the database server then Switch to the root]

yum -y install postgresql-server postgresql-contrib

postgresql-setup initdb                                                 --------->initiate db setup

systemctl enable postgresql

systemctl start postgresql

systemctl status postgresql

sudo -u postgres psql

CREATE USER <db user> WITH PASSWORD '<password>';                       -------->creating user

CREATE DATABASE <db>;                                                   -------->creating databse

GRANT ALL PRIVILEGES ON DATABASE "<db>" to <db user>;                   -------->granting permission

\q

vi /var/lib/pgsql/data/postgresql.conf    --->edit postgresql.conf
[remove # of #listen_addresses = 'localhost']

cat /var/lib/pgsql/data/postgresql.conf |grep localhost

vi /var/lib/pgsql/data/pg_hba.conf       --->Edit another config file pg_hba.conf  &  configure the md5 at bottom of the config 

cat /var/lib/pgsql/data/pg_hba.conf |grep md5

systemctl restart postgresql

systemctl status postgresql

psql -U kodekloud_top -d kodekloud_db5 -h 127.0.0.1 -W         ---->validating the task

\q

psql -U kodekloud_top -d kodekloud_db5 -h localhost -W

all#
local all all md5

host all all 127.0.0.1/32 md5
